# TODO: En endeavourOS a lo mejor esto ya no es necesario?
unset LSCOLORS

# Stopwatch function
function t(){
   termdown $1 -v en -b -t "Finished" -W 
}

function t25(){
  t 25m
}

function t5(){
  t 5m
}

function t10(){
  t 10m
}


function attack(){
  echo "tgt=$1" > .ataca_tanaka
  exec zsh
}

# Crypto utils
# curl rate.sx/:help para mas cosas

function cr20(){
  curl 'rate.sx/?n=20'
}

function cr(){
  curl rate.sx/$1
}

